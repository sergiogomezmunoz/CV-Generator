---
// Hero component

// Description ---------------------------------------------------------------------------------------
// This component is a hero section that displays a large image with a title and description.
// The hero component is used to introduce the page and provide a visual representation of the content.
// ---------------------------------------------------------------------------------------------------

// Imports -------------------------------------------------------------------------------------------
import { basics } from "@cv"; // Import the basics object from the cv data
import Section from "@/components/Section.astro"; // Import the section component
import { Image } from "astro:assets"; // Import the Image component from the astro assets package
// ---------------------------------------------------------------------------------------------------

// Constants -----------------------------------------------------------------------------------------
const { name, label, image, email } = basics; // Destructure the name and label properties from the basics object
const { city, region } = basics.location; // Destructure the city and region properties from the location object
const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/images/*.{jpeg,jpg,png,gif}"
);
// ---------------------------------------------------------------------------------------------------
---

<Section>
  <div class="flex justify-between mt-8">
    <div>
      <h1 class="text-4xl">{name}</h1>
      <h2 class="text-xl">{label}</h2>
      <span>{city}, {region}</span>
      <footer>
        {
          email && (
            <a
              href={`mailto:${email}`}
              title={`Send an email to ${name} (${email})`}
              target="_blank"
              rel="noopener noreferrer"
            >
              {email}
            </a>
          )
        }
      </footer>
    </div>
    <figure class="max-w-32">
      <Image class="w-full rounded-lg" src={images[image]()} alt={name} />
    </figure>
  </div>
</Section>
